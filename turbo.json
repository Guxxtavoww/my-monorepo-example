{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalDependencies": [
    "**/.env.*local", "**/.env"
  ],
  "tasks": {
    "build": {
      "env": [
        "DATABASE_ROOT_PASSWORD",
        "DATABASE_DATABASE_NAME",
        "DB_PORT",
        "DATABASE_HOST",
        "DB_USER",
        "JWT_SECRET",
        "JWT_REFRESH_SECRET",
        "JWT_REFRESH_EXPIRES_IN",
        "JWT_EXPIRES_IN",
        "JWT_AUDIENCE",
        "JWT_ISSUER",
        "PORT",
        "NODE_ENV"
      ],
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env", ".env.local"],
      "outputs": [
        "build/**",
        ".vercel/**",
        "dist/**",
        ".next/**",
        "!.next/cache/**"
      ]
    },
    "test": {
      "outputs": ["coverage/**"],
      "dependsOn": []
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"]
    }
  },
  "globalEnv": ["NODE_ENV"]
}
